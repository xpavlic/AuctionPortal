@model DemoEshop.PresentationLayer.Models.Accounts.LoginModel

@{
	ViewBag.Title = "Login";
}

<h2>Login</h2>

<div>
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group row">
				@Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "col-form-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "EmailAddress" } })
				</div>
			</div>

			<div class="form-group row">
				@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label col-md-2" })
				<div class="col-md-10">
					@Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
				</div>
			</div>

			<div class="form-group row">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Login" class="btn btn-default" />
				</div>
			</div>
		</div>
	}
</div>