@model AuctionPortal.PresentationLayer.Models.Accounts.ChangeEmailModel

@{
    ViewBag.Title = "ChangeEmail";
}

<h2>ChangeEmail</h2>

<div>
    @using (Html.BeginForm("ChangeEmail", "Account", Model, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.Hidden("Email", User.Identity.Name)
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.NewEmail, htmlAttributes: new { @class = "col-form-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewEmail, new { @class = "form-control", @placeholder = "NewEmail" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.NewEmailAgain, htmlAttributes: new { @class = "col-form-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewEmailAgain, new { @class = "form-control", @placeholder = "NewEmailAgain" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit and relogin" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
