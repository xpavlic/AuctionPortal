@model AuctionPortal.PresentationLayer.Models.Admin.AccountListModel

@{
	ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

@foreach (var account in Model.Accounts)
{
	using (Html.BeginForm("DeleteAccount", "Admin", new { accountId = account.Id }, FormMethod.Post))
	{
		<div class="row">
			<div class="list-group-item" @("onclick=GoToAccountEdit('" + account.Id + "')")>
				<h4><strong>@account.FirstName @account.LastName</strong> @account.Email</h4>
				<h6>Click to edit</h6>
				<br />
			</div>
			<div class="form-group row">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="DELETE" class="btn btn-danger" />
				</div>
			</div>
		</div>
	}

}

<script>
	function GoToAccountEdit(id) {
		window.location = "/Admin/AccountDetail/" + id;
	}
</script>